@model HandsOnMVCValidations.Models.User
@{
    ViewData["Title"] = "Create";
}
<div class="container">
    <form asp-action="Create" asp-controller="Authenticate" method="POST">
        <table>
            <tr>
                <td>FirstName</td>
                <td>
                    <input type="text" asp-for="FirstName" />
                    <span asp-validation-for="FirstName"></span>
                </td>
            </tr>
            <tr>
                <td>LastName</td>
                <td>
                    <input type="text" asp-for="LastName" />
                </td>
            </tr>
            <tr>
                <td>Gender</td>
                <td>
                    Male <input type="radio" value="Male" asp-for="Gender" />
                    FeMale <input type="radio" value="FeMale" asp-for="Gender" />
                </td>
            </tr>
            <tr>
                <td>Age</td>
                <td>
                    <input type="text" asp-for="Age" />
                    <span asp-validation-for="Age"></span>
                </td>
            </tr>
            <tr>
                <td>Email</td>
                <td>
                    <input type="email" asp-for="Email" />
                    <span asp-validation-for="Email"></span>
                </td>
            </tr>
            <tr>
                <td>Mobile</td>
                <td>
                    <input type="number" asp-for="Mobile" />
                    <span asp-validation-for="Mobile"></span>
                </td>
            </tr>
            <tr>
                <td>Country</td>
                <td>
                     <select asp-for="Country"
                            asp-items='new SelectList(new string[]{"Pls Enter Country","India","China","US"})'></select>
                    <span asp-validation-for="Country"></span>
                </td>
            </tr>
            <tr>
                <td>Password</td>
                <td>
                    <input type="password" asp-for="Password" />
                    <span asp-validation-for="Password"></span>
                </td>
            </tr>
            <tr>
                <td>Confirm Password</td>
                <td>
                    <input type="password" asp-for="ConfirmPassword" />
                    <span asp-validation-for="ConfirmPassword"></span>
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <input type="submit" />
                </td>
            </tr>
        </table>
    </form>
</div>


