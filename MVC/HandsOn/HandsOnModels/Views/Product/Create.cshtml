@model Product
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <form action="Add" method="post">
        <table class="table">
            <tr>
                <td>Id</td>
                <td>
                    <input type="number" asp-for="Id" />
                </td>
            </tr>
            <tr>
                <td>Name</td>
                <td>
                    <input type="text" asp-for="Name" />
                </td>
            </tr>
            <tr>
                <td>Description</td>
                <td>
                    <input type="text" asp-for="Description" />
                </td>
            </tr>
            <tr>
                <td>Price</td>
                <td>
                    <input type="number" asp-for="Price" />
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <input type="submit" />
                </td>
            </tr>
        </table>
    </form>
</div>

